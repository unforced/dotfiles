  decorate = short
[color]
  ui = true
[merge]
  log = 1000
[pager]
  show-branch = true
  status = true
[include]
  path = ~/.gitconfig.local
[apply]
  whitespace = fix
[core]
  excludesfile = /Users/aaronneyer/.gitignore
  pager = less -r
  # global gitignore, useful for hiding editor files
[push]
  default = simple
[rebase]
  autosquash = true
  stat = true
[alias]
  st = status -sb
  ci = commit
  co = checkout
  au = add -u
  su = submodule update --init
  oneline = log --oneline
  graph = log --oneline --graph
  last = log -1
  patch = add --patch
  amend = commit --amend
  staged = diff --cached
  ph = push origin HEAD
  poh = pull --rebase origin HEAD
  rom = rebase origin/master
  from = !sh -c 'git fetch origin && git rebase origin/master' -
